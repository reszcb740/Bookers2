<main>
  <p></p>
  <div>
    <div>
      <div>
        <h2>User info</h2>
        <% @user.errors.any? %>
         <p class="notice"><%= @user.errors.count %> errors prohibited this obj from being saved: </p>
         <ul>
           <% @user.errors.full_messages.each do |message| %>
            <li class="notice"><%= message %></li>
           <% end %>
         </ul>
        <% end %>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id: "user_name", placeholder: "名前" %>
        </div>
        <div class="form-group">
          <label for="use_image">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, placeholder: "自己紹介文" %>
        </div>
        <%= f.submit "Update User" %>
       <% end %>
      </div>
    </div>
  </div>
</main>
