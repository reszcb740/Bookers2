<main>
  <%= render 'books/index', book: @book, user: @user %>
  <div>
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>
        <tr>
          <td><%= image_tag @user.get_profile_image(40, 40) %></td>
          <td><%= book.title %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</main>
