<main>
  <div class="container">
    <div class="row">
     <%= render 'books/index', book: @book_new, user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
             <tr>
               <td><%= image_tag @user.get_profile_image(40, 40) %><br><%= link_to @user.name, user_path(@user.id) %></td>
               <td><%= link_to @book.title, book_path(@book.id) %></td>
               <td><%= @book.body %></td>
               <% if @book.user == current_user %>
               <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger destroy_book"  %></td>
               <% end %>
              </tr>
         </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
