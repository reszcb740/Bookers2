<main>
  <p></p>
<%= render 'books/index', book: @book_new, user: @user %>
<div>
  <h2>Book detail</h2>
  <table>
    <tbody>
       <tr>
         <td><%= image_tag @user.get_profile_image(40, 40) %><br><%= link_to @user.name, user_path(@user.id) %></td>

         <td><%= link_to @book.title, book_path(@book.id) %></td>
         <td><% @book.body %></td>
         <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
         <% if @book.user == current_user %>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
         <% end %>
        </tr>
   </tbody>
  </table>
</div>
</main>
