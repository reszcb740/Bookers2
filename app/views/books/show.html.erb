<main>
  <p></p>
<%= render 'books/index', book: @book, user: @user %>
<div>
  <h2>Book detail</h2>
  <table>
    <tbody>
     <% @books.each do |book| %>

       <tr>
         <td><%= @user.name %></td>
         <%= image_tag @user.get_profile_image(100, 100) %>
         <td><%= link_to "book.title", book_path(@book.id) %></td>
         <td><% book.body =%></td>
         <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
         <td><%= link_to "Destroy", books_path, method: :delete %></td>
        </tr>
     <% end %>
   </tbody>
  </table>
</div>
</main>
