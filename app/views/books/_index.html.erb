 <div>
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(50, 50) %>
        <table>
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
           </tr>
         </tbody>
      </table>
      <div>
        <a><%= link_to "edit" , edit_user_path(user.id) %></a>
      </div>

      <h2>New book</h2>
      <%= form_with model: book, url: '/books', method: :post do |f| %>
        <div>
          <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <ladel>Opinion</ladel>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
     <% end %>