      <h2>User info</h2>
      <%= image_tag user.get_profile_image(63, 63) %>
        <table>
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
           </tr>
         </tbody>
      </table>
      <div>
        <a><%= link_to "edit" , edit_user_path(user.id) %></a>
      </div>

      <h2>New book</h2>
      <% if @book.errors.any? %>
       <p class="notice"><%= @book.errors.count %> errors prohibited this obj from being saved: </p>
       <ul>
         <% @book.errors.full_messages.each do |message| %>
          <li class="notice"><%= message %></li>
         <% end %>
       </ul>
      <% end %>
      <%= form_with model: book, url: '/books', method: :post do |f| %>
        <div>
          <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <ladel>Opinion</ladel>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
     <% end %>