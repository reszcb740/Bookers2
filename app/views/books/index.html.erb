
<main>
  <p class="id"><%= flash[:notice] %></p>
  <div>
    <%= render 'books/index', book: @book, user: @user %>

     <div>

       <h2>Books</h2>
       <table>
         <thead>
           <tr>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @books.each do |book| %>

             <tr>
               <td><%= image_tag @user.get_profile_image(100, 100) %></td>
               <td><%= link_to book.title, book_path(book.id) %></td>
               <td><% book.body =%></td>
              </tr>
           <% end %>
         </tbody>
       </table>
     </div>
    </div>
  </div>
</main>
